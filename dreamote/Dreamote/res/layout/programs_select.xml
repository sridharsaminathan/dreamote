<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<LinearLayout 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >
		<TextView
		    android:id="@+id/txt_supported_programs" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Supported Programs"
		    />
		<LinearLayout 
		 	android:id ="@+id/layout_supported_programs"		    
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    />
		<TextView
		    android:id="@+id/txt_other_programs" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Other Programs"/>
		<LinearLayout 
		    android:id="@+id/layout_other_programs"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		  />
	</LinearLayout>
</ScrollView>